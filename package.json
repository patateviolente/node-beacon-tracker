{
  "name": "node-beacon-tracker",
  "version": "1.0.0",
  "description": "Triangulation node server for tracking moving targets",
  "main": "src/app.ts",
  "scripts": {
    "benchmark": "node dist/src/benchmark.js",
    "start": "export TESTENV= ; npm run serve",
    "serve": "node dist/app.js",
    "test": "./node_modules/mocha/bin/mocha",
    "lint": "./node_modules/tslint/bin/tslint './src/**/*.ts'",
    "coverage": "./node_modules/nyc/bin/nyc.js ./node_modules/mocha/bin/mocha",
    "coverage-html": "./node_modules/nyc/bin/nyc.js --reporter=html ./node_modules/mocha/bin/mocha",
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "watch-ts": "tsc -w"
  },
  "author": "violentpotato",
  "license": "ISC",
  "dependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "bluebird": "^3.5.4",
    "jsdom": "^15.1.1",
    "noble": "^1.9.1",
    "node-trilateration": "^1.0.0",
    "nyc": "^14.1.1",
    "ts-node": "^8.3.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.27",
    "@types/bluebird-global": "^3.5.12",
    "@types/chai": "^4.1.7",
    "@types/express": "^4.17.0",
    "@types/mocha": "^5.2.7",
    "@types/noble": "0.0.39",
    "@types/node": "^12.6.8",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^7.0.13",
    "@types/sinon-chai": "^3.2.3",
    "chai": "^4.2.0",
    "jetty": "^0.2.1",
    "mocha": "^6.1.4",
    "proxyquire": "^2.1.0",
    "rewire": "^4.0.1",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.5.3"
  },
  "nyc": {
    "all": true,
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "src/**/*"
    ],
    "reporter": [
      "text",
      "lcov"
    ]
  }
}
